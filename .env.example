# Database
DATABASE_URL="postgresql://user:password@localhost:5433/fortune_city?schema=public"
POSTGRES_USER=fortune
POSTGRES_PASSWORD=your_password
POSTGRES_DB=fortune_city

# Redis
REDIS_URL="redis://localhost:6379"

# API
PORT=3001
API_PORT=3001
API_URL="http://localhost:3001"

# Frontend
# Используем относительный путь /api для прокси через Next.js rewrites
# В production можно указать абсолютный URL если API на отдельном домене
NEXT_PUBLIC_API_URL="/api"
NEXT_PUBLIC_TELEGRAM_BOT_NAME=YourBotName

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
FORTUNE_MINT_ADDRESS=your_fortune_token_mint_address

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Solana RPC
HELIUS_API_KEY=your_helius_api_key
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_api_key

# Solana Wallets
# Master seed for HD wallet derivation (generates unique deposit addresses per user)
SOLANA_MASTER_SEED=your_master_seed_64_bytes_hex

# Hot wallet - receives deposits and sweep from user deposit addresses
SOLANA_HOT_WALLET=your_hot_wallet_public_key
SOLANA_HOT_WALLET_SECRET=your_hot_wallet_private_key

# Payout wallet - SEPARATE wallet for withdrawals only (security isolation)
SOLANA_PAYOUT_WALLET=your_payout_wallet_public_key
SOLANA_PAYOUT_WALLET_SECRET=your_payout_wallet_private_key

# Admin Panel Authentication
ADMIN_USER=admin
ADMIN_PASS=your_secure_password
ADMIN_JWT_SECRET=your_admin_jwt_secret
ADMIN_JWT_EXPIRES_IN=8h

# Supabase (для валидации JWT в бэкенде и для клиента во фронтенде)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
