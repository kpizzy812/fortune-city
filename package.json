{
  "name": "fortune-city",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:api": "pnpm --filter @fortune-city/api dev",
    "dev:web": "pnpm --filter @fortune-city/web dev",
    "db:generate": "pnpm --filter @fortune-city/api exec prisma generate",
    "db:push": "pnpm --filter @fortune-city/api exec prisma db push",
    "db:studio": "pnpm --filter @fortune-city/api exec prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  }
}
